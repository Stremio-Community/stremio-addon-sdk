{
  "name": "stremio-addon-sdk",
  "version": "0.0.1",
  "description": "Community Stremio Addon SDK for modern-day TypeScript developers",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "build": "pnpm -r build",
    "build:watch": "pnpm -r --parallel build --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky"
  },
  "license": "MIT",
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2"
  }
}
