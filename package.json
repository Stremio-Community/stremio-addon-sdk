{
  "name": "stremio-addon-sdk",
  "version": "0.0.1",
  "description": "Community Stremio Addon SDK for modern-day TypeScript developers",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "build": "pnpm -r build",
    "build:watch": "pnpm -r --parallel build --watch",
    "clean": "pnpm -r exec rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Stremio-Community/stremio-addon-sdk.git"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "vitest": "^4.0.5"
  }
}
